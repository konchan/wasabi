= form_for @phase, html: {class: "form-horizontal"} do |f|
  -if @phase.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phase.errors.count, "error")} prohibited this phase from being saved:"
      %ul
        - @phase.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :design
    = f.text_field :design
  .actions
    = f.submit 'Save'
