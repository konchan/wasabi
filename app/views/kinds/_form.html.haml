= form_for @kind, html: {class: "form-horizontal"} do |f|
  -if @kind.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kind.errors.count, "error")} prohibited this kind from being saved:"
      %ul
        - @kind.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :design
    = f.text_field :design
  .actions
    = f.submit 'Save'
